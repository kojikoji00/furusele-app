.income
  あなたの情報を入れてね
  = form_with url: 'root_path' do |f|
    -# = collection_select(:template, :name, templates, :id, :name, {:include_blank => true})
    -# = form.text_area :body, :size => "40x10"
    .form-group
      = f.label :income, '年収'
      = f.select :incom, {'300万円': 1, '350万円': 2, '400万円': 3, '450万円': 4, '500万円': 5, '550万円': 6, '600万円': 7, '650万円': 8, '700万円': 9, '750万円': 10, '800万円': 11, '850万円': 12, '900万円': 13, '950万円': 14, '1000万円': 15, '1200万円': 16, '1400万円': 17, '1600万円': 18}, { include_blank: '選択してください'}, { class: 'form-control' , required: true }
