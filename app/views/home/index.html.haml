      = f.select :family, {'独身': 1, '既婚': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true }
      = f.label :family, '扶養家族'
      = f.select :family, {'いる': 1, 'いない': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true }

