= render 'commons/header'
%h3.deduction
  = "控除額：#{@deduction.deduction.to_s(:delimited)}円"
  
.category
  .category-title
    %h3 カテゴリーを１〜３つ選択してください
  .category-select
    = form_with(model: @category_detail, url: "/categories", method: 'post') do |f|
      = render 'category'
      = submit_tag '登録する', class: 'btn-primary', id: 'file-btn'

