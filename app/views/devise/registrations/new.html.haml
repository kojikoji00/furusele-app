.form
  .inner
    %h2 ユーザー登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        .field-nickname
          = f.label :ニックネーム
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "sample"
        .field-mail
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field-password
          = f.label :パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password"
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .field-income
          = f.label :年収
          %br/
          = f.select :income, {'300万円': 1, '350万円': 2, '400万円': 3, '450万円': 4, '500万円': 5, '550万円': 6, '600万円': 7, '650万円': 8, '700万円': 9, '750万円': 10, '800万円': 11, '850万円': 12, '900万円': 13, '950万円': 14, '1000万円': 15, '1200万円': 16, '1400万円': 17, '1600万円': 18}, include_blank: "選択して下さい"
        .field-family
          = f.label :家族構成
          %br/
        = f.select :family, {'独身': 1, '既婚・共働き(配偶者控除無し)': 2, '既婚（配偶者控除有り）': 3,  '既婚・共働き（配偶者控除無し）＋子1人（高校生）': 4, '既婚・共働き（配偶者控除無し）＋子1人（大学生）': 5, '既婚（配偶者控除有り）': 6, '既婚・共働き（配偶者控除無し）＋子2人（大学生と高校生）': 7, '既婚（配偶者控除有り）＋子2人（大学生と高校生）': 8}, include_blank: "選択して下さい"
      .actions
        = f.submit "登録する"
    = render "devise/shared/links"
