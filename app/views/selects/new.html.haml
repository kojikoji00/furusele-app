.personal
  .personal-title
    %h3 あなたの情報を入力してください
  .prtsonal-form
    .personal-form-group
      = form_with url: user_registration_path do |f|
        .personal-form-group-income
          %i.fas.fa-money-check
          = f.label :income, '年収    '
          %br/
          = f.select :income, {'300万円': 1, '350万円': 2, '400万円': 3, '450万円': 4, '500万円': 5, '550万円': 6, '600万円': 7, '650万円': 8, '700万円': 9, '750万円': 10, '800万円': 11, '850万円': 12, '900万円': 13, '950万円': 14, '1000万円': 15, '1200万円': 16, '1400万円': 17, '1600万円': 18}, include_blank: "選択して下さい"
        .personal-form-group-family
          %i.fas.fa-house-user
          = f.label :family, '家族構成'
          %br/
          = f.select :family, {'独身': 1, '既婚・共働き(配偶者控除無し)': 2, '既婚（配偶者控除有り）': 3,  '既婚・共働き（配偶者控除無し）＋子1人（高校生）': 4, '既婚・共働き（配偶者控除無し）＋子1人（大学生）': 5, '既婚（配偶者控除有り）': 6, '既婚・共働き（配偶者控除無し）＋子2人（大学生と高校生）': 7, '既婚（配偶者控除有り）＋子2人（大学生と高校生）': 8}, include_blank: "選択して下さい"
        .personal-form-group-action
          = f.submit '登録する', class: 'btn-primary', id: 'file-btn'

